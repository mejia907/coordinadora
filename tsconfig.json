{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./dist", // Carpeta de salida
    "rootDir": "./src", // Carpeta de raiz de los archivos
    "strict": true,
    "esModuleInterop": true, // Habilita el uso de modulos
    "moduleResolution": "node", // Resolucion de modulos
    "baseUrl": "./src", // Carpeta base
    "paths": {
        "@config/*": ["config/*"],
        "@entitites/*": ["entitites/*"],
        "@infrastructure/*": ["infrastructure/*"],
        "@controllers/*": ["controllers/*"],
        "@application/*": ["application/*"],
        "@schemas/*": ["schemas/*"],
    },
  },
    "include": ["**/*.ts"], // Archivos a compilar
    "exclude": ["node_modules"], // Archivos a excluir
    "ts-node": {
      "require": ["tsconfig-paths/register"] // Habilita el uso de tsconfig-paths
  }

}
